<!doctype html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="google-adsense-account" content="ca-pub-9371741460887435">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.87.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="/public/css/signin.css" rel="stylesheet">
    <link href="/public/css/styles.css" rel="stylesheet">
<link rel="icon" href="/public/assets/favicons/favicon-removebg.png" type="image/x-icon">
    <title>Inicia Sesión</title>
</head>

<body class="text-center">

    <main class="form-signin text-center shadow-lg p-3 mb-3">

        <form id="formLogin" action="/login" method="POST">

            <img class="w-75" src="/public/assets/favicons/logoFD.webp" alt="logo" >

            <h1 class="h3 mb-3 fw-normal">Inicia Sesión</h1>

            <div class="form-floating m-2">
                <input type="email" class="form-control" id="email" name="email" placeholder="Correo">
                <label for="user">Correo</label>
            </div>

            <div class="form-floating m-2">
                <input type="password" class="form-control" id="pass" name="pass" placeholder="Contraseña">
                <label for="pass">Contraseña</label>
            </div>

            <button class="w-100 btn btn-lg btn-primary" type="submit">Inicia Sesión</button>
        </form>
    </main>

    <section class="form-signin text-center shadow-lg  mb-5 w-100 fs-4 ">
        <div class="mt-2">
            ¿Nuevo en FitData? <br> <a class="w-100 btn btn-lg btn-bd-primary mt-3" href="/register"
                style="text-decoration:none">Crea una cuenta</a>
        </div>

        <div class="mt-3 link-opacity-75 fs-6">
            <a  href="/">Volver al Inicio</a>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/52b9ec387c.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9371741460887435"
     crossorigin="anonymous"></script>
    <!-- SWEETALERT -->
    <% if(alert) { %>
        <script>
            Swal.fire({
                title: '<%= alertTitle %>',
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmButton:  <%= showConfirmButton %>,
                timer: <%= timer %>
            }).then(() => {
                window.location = '<%= ruta %>'
            })
        </script>
        <% } %>
            <!-- SWEETALERT -->
</body>

</html>
